{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "typeRoots": ["./types"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@res/*": ["./resources/*"],
      "@nav/*": ["./navigation/*"],
      "@type/*": ["./types/*"],
      "@assets/*": ["./assets/*"],
      "@screens/*": ["./screens/*"],
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@queries/*": ["./queries/*"],
      "@utils/*": ["./utils/*"]
    }
  }
}
